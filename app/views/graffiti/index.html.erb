<html lang="en" ng-app="Graffiti">
  <head>
    <meta charset="utf-8">
    <title>Graffiti</title>
  </head>

  <body ng-controller="GraffitiController as ctrl">
  <div class="grid">
    <ul class="vertical">
      <li ng-repeat="row in ctrl.graffiti.rows" class="vertical" id="v{{row.no}}">
        <ul class="horizontal">
          <li ng-repeat="column in row.columns" class="horizontal" id="h{{column.no}}">
            <button class="pixel" ng-click="ctrl.paint(column.no, row.no, 'rgba(0, 0, 0, 1)')" id="{{column.no}}{{row.no}}" style="background-color:{{column.colour}}"></button>
          </li>
        </ul>
      </li>
    </ul>
  </div>
  </body>